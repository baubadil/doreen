<?xml version='1.0' encoding='UTF-8'?>
<DLG>
    <!-- Delete ticket dialog. -->
    <div class="modal fade" tabindex="-1" id="ticketDebugInfoDialog">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span class="sr-only">Close</span></button>
                    <h1 class="modal-title drn-find-replace-ticket" id="ticketDebugInfoDialog-title"><ICON type="bug"/> Debug info for #%IDTICKET%</h1>
                </div>
                <div class="modal-body">
                    <div class="alert alert-warning" role="alert" id="ticketDebugInfoDialog-spinner">
                        <p>Fetching permissions, please wait... <ICON type="spinner" /></p>
                    </div>
                    <div id='ticketDebugInfoDialog-info' class="hidden">
                        <p>Group access permissions:</p>
                        <p id="ticketDebugInfoDialog-groups"> </p>
                        <p>The following users have read access to this ticket:</p>
                        <p id="ticketDebugInfoDialog-users-read"> </p>
                        <p>Ticket type: <span id="ticketDebugInfoDialog-type"> </span> (Class: <span id="ticketDebugInfoDialog-class"> </span>)</p>
                        <p>Unformatted ticket data:</p>
                        <p id="ticketDebugInfoDialog-ticket-data"> </p>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="alert alert-danger  hidden drn-error-box" role="alert"><p>Error message</p></div>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</DLG>
